<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">
    <class>pl.wbobiatynski.kprm.booksauthors.entity.Author</class>
    <class>pl.wbobiatynski.kprm.booksauthors.entity.Book</class>
    <properties>
      <property name="hibernate.connection.url" value="jdbc:h2:mem:booksauthors"/>
      <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>
      <property name="hibernate.connection.username" value="user"/>
      <property name="hibernate.connection.password" value="user"/>
    </properties>
  </persistence-unit>
    <persistence-unit name="persistenceUnit"/>
</persistence>
